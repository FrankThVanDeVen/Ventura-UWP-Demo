        </Ventura:MenubarItem>
    </Ventura:SmartPage.MenuBar>

    <Ventura:SmartPagePanel>

        <TextBlock Style="{StaticResource BaseTextBlockStyle}">Local menus</TextBlock>

        <TextBlock TextWrapping="Wrap">
            When this page is activated, local menus will be added to the navigation bar above.
        </TextBlock>

        <TextBlock>When this page is activated, the rectangle below will be filled blue.</TextBlock>

        <Rectangle
            x:Name="rectangle"
            Width="100"
            Height="100"
            HorizontalAlignment="Left"
            Stroke="Gray"
            StrokeThickness="1.5" />

    </Ventura:SmartPagePanel>


