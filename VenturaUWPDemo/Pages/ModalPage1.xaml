<controls:SmartPage
    x:Class="Demo.Pages.ModalPage1"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="using:Ventura.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:Demo.Pages"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
    mc:Ignorable="d">

    <Grid>
        <StackPanel>
            <Button x:Name="btnClose" Click="BtnClose_Click">Close this modal.</Button>
            <Button x:Name="btnOpenModal" Click="BtnOpenModal_Click">Open another modal.</Button>
            <TextBox
                x:Name="TitleText"
                Width="300"
                Height="40" />
            <Button x:Name="btnSetCaption" Click="BtnSetCaption_Click">Set caption</Button>
        </StackPanel>
    </Grid>
</controls:SmartPage>
