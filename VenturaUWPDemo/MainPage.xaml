                    <Ventura:MenuItem Caption="InputControls" Click="InputControls_Click" />
                    <Ventura:MenuItem Caption="Buttons" Click="Buttons_Click" />
                    <Ventura:MenuItem Caption="Local menus" Click="LocalMenus_Click" />
                    <Ventura:MenuItem Caption="Instant screen update" Click="InstantScreenUpdate_Click" />
                </Ventura:MenubarCategory>
                <Ventura:MenubarCategory Caption="Text">
                    <Ventura:MenuItem Caption="Headers" Click="Headers_Click" />
                    <Ventura:MenuItem Caption="Distinct colors" Click="DistinctColors_Click" />
                </Ventura:MenubarCategory>
            </Ventura:MenubarItem>
            <Ventura:MenubarItem Caption="Apotheek">
                <Ventura:MenubarCategory Caption="Patiënten">
