                <Ventura:MenubarCategory Caption="Receptuur/Kassa">
                    <Ventura:MenuItem Caption="MenuItem 1" />
                    <Ventura:MenuItem Caption="MenuItem 2" />
                </Ventura:MenubarCategory>
                <Ventura:MenubarCategory Caption="Facturering">
                    <Ventura:MenuItem Caption="MenuItem 1" />
                    <Ventura:MenuItem Caption="MenuItem 2" />
