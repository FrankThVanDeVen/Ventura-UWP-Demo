                    <Ventura:MenuItem Caption="MenuItem 2" />
                </Ventura:MenubarCategory>
                <Ventura:MenubarCategory Caption="Rapportage">
                    <Ventura:MenuItem Caption="MenuItem 1" />
                    <Ventura:MenuItem Caption="MenuItem 2" />
                    <Ventura:MenuItem Caption="MenuItem 3" />
                    <Ventura:MenuItem Caption="MenuItem 4" />
                </Ventura:MenubarCategory>
                <Ventura:MenubarCategory Caption="Stamgegevens">
                    <Ventura:MenuItem Caption="MenuItem 1" />
                    <Ventura:MenuItem Caption="MenuItem 2" />
                </Ventura:MenubarCategory>
            </Ventura:MenubarItem>
        </Ventura:ShellFrame.MenuBar>
