<UserControl
    x:Class="Ventura.Controls.HyperGridHeaderCell"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:Ventura.Controls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="300"
    d:DesignWidth="400"
    mc:Ignorable="d">

    <Grid Background="{StaticResource VenturaBlueBrush}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>
        <Rectangle
            x:Name="RectangleControl"
            Grid.Column="0"
            Width="{StaticResource GridLineWidth}"
            Fill="{StaticResource GridLineBrush}" />
        <TextBlock
            x:Name="TextBlockControl"
            Grid.Column="1"
            Margin="4,4,4,4"
            Foreground="{StaticResource VenturaWhiteBrush}" />
    </Grid>
</UserControl>
